<VirtualHost *:<%= port %>>
  ServerName <%= name %>
  <% if aliases.length -%>
   ServerAlias <%= aliases.join(' ') %>
  <% end -%>
  DocumentRoot <%= documentroot %>
  <Directory <%= documentroot %>>
    AllowOverride all
  </Directory>
  <Location />
    Options +Includes
  </Location>
</VirtualHost>